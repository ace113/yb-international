<div class="contact">
    <h4 class="heading-primary">Contact Us</h4>
    <small class="heading-tertiary">Contact us at any of your convenient customer service phone
        number or you can simply shoot an email and we will get back to you as soon as
        possible.</small>
    <hr>
    <%- include('../partials/errorMessage.ejs') %>
    <form action="" method="POST" id="contact">
        <div class="form-group">
            <label for="name">Name <span class="red-star">*</span></label>
            <input type="text" name="name" id="" class="form-control" required aria-required>
        </div>
        <div class="form-group">
            <label for="name">Email <span class="red-star">*</span></label>
            <input type="email" name="email" id="" class="form-control" required aria-required>
        </div>
        <div class="form-group">
            <label for="name">Subject <span class="red-star">*</span></label>
            <input type="text" name="subject" id="" class="form-control" required aria-required>
        </div>
        <div class="form-group">
            <label for="name">Message <span class="red-star">*</span></label>
            <textarea name="message" id="" class="form-control" rows="5" required aria-required></textarea>
        </div>
        <div class="button-wrapper">
            <input type="submit" value="Send Message" class="button">
        </div>
    </form>
    <hr class="mb-4 mt-4">
    <div class="row">
        <div class="col-md-6 map">
            <img src="/public/images/map.JPG" alt="" class="map__image">
        </div>
