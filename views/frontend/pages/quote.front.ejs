<div class="row justify-content-center align-items-center mt-2" style="height:100vh">
    <div class="col-md-6">
        <div class="h4">Online Quote Request</div>
        <hr class="mb-4">
        <%- include('../partials/errorMessage.ejs') %>
        <form action="" method="POST">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Name</label>
                <div class="col-sm-8">
                    <input type="text" name="name" id="name" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Email<span class="text-danger"> *</span></label>
                <div class="col-sm-8">
                    <input type="email" name="email" id="email" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Phone<span class="text-danger"> *</span></label>
                <div class="col-sm-8">
                    <input type="tel" name="phone" id="phone" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Product<span class="text-danger"> *</span></label>
                <div class="col-sm-8">
                    <input type="text" name="product" id="product" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Product Code</label>
                <div class="col-sm-8">
                    <input type="text" name="code" id="code"
                        class="form-control form-control-sm"><small>(Optional)</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Quantity<span class="text-danger"> *</span></label>
                <div class="col-sm-8">
                    <input type="text" name="quantity" id="quantity" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Requirements</label>
                <div class="col-sm-8">
                    <textarea name="requirements" id="requirements" class="form-control form-control-sm"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Packing Details</label>
                <div class="col-sm-8">
                    <textarea name="packingDetails" id="packingDetails" class="form-control form-control-sm"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="callMe" class="col-sm-4 col-form-label col-form-label-sm">Call me regarding this
                    quote.<span class="text-danger"> *</span></label>
                <div class="col-sm-8">
                    <div class="form-check form-check-inline">
                        <input type="radio" name="callMe" class="form-check-input" value="true" checked>
                        <label class="form-check-label">Call me</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="callMe" class="form-check-input" value="false">
                        <label class="form-check-label">Email me</label>
                    </div>
                </div>
            </div>
            <input type="submit" value="Submit" class="btn btn-sm btn-success btn-block">
        </form>
    </div>
</div>