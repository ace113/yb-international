<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/customers">Customers</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Customers</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Customers</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <table class="table table-sm table-hover table-bordered table-responsive">
            <thead>
                <th>S. No.</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Primary Address</th>
                <th>City</th>
                <th>Country</th>
                <th> &nbsp; </th>
            </thead>
            <tbody>
                <% customers.forEach((customer, sn=1)=> { %>
                <tr>
                    <td><%= sn+1 %></td>
                    <td><a href="/admin/customer/<%= customer._id %>"><%= customer.fname %></a></td>
                    <td><%= customer.lname %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.address1 %></td>
                    <td><%= customer.city %></td>
                    <td><%= customer.country %></td>
                    <td><form action="/admin//customer/edit/<%= customer._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-primary btn-sm" type="submit"><i class="fas fa-trash"></i></button>
                        <a class="btn btn-primary btn-sm" href="/admin/customer/edit/<%= customer._id %>"><i class="fas fa-edit"></i></a>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>