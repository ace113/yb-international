<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/customers">Customers</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Customers</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left;">All Customers</h4>
        <a href="/admin/customer/add" class="btn btn-primary btn-sm" style="float: right"><i class="fas fa-plus"> Add New</i></a>
    </div>
</div>
<div class="card-body bg-light text-dark">
    <table class="table table-sm table-hover table-bordered table-responsive-sm">
        <thead>
            <th>S.No.</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Primary Address</th>
            <th>City</th>
            <th>Country</th>
            <th width="40">&nbsp;</th>
        </thead>
        <tbody>
            <% customers.forEach((customer, sn=1)=> { %>
            <tr>
                <td><%= sn+1 %></td>
                <td><a href="/admin/customer/<%= customer._id %>"><%= customer.fname %></a></td>
                <td><%= customer.lname %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><%= customer.address1 %></td>
                <td><%= customer.city %></td>
                <td><%= customer.country %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button"
                            data-toggle="dropdown">
                            <i class="fa fa-cog"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <form action="/admin/customer/edit/<%= customer._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-primary btn-sm dropdown-item" type="submit"><i
                                            class="fas fa-trash"></i> Delete</button>
                                </form>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-sm dropdown-item"
                                    href="/admin/customer/edit/<%= customer._id %>"><i class="fas fa-edit"></i> Edit</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</div>