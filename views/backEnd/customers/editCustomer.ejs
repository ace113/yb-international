<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/customers">Customers</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Customer</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Edit Customer</h4>
    </div>

    <div class="card-body bg-light text-dark">
        <form action="/admin/customer/edit/<%= customer._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label for="fname" class="col-sm-2 col-form-label col-form-label-sm">First Name</label>
                <div class="col-sm-4">
                    <input type="text" name="fname" class="form-control form-control-sm" value="<%= customer.fname %>">
                </div>
                <label for="lname" class="col-sm-2 col-form-label col-form-label-sm">Last Name</label>
                <div class="col-sm-4">
                    <input type="text" name="lname" class="form-control form-control-sm" value="<%= customer.lname %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
                <div class="col-sm-6">
                    <input type="email" name="email" class="form-control form-control-sm" value="<%= customer.email %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="phone" class="col-sm-2 col-form-label col-form-label-sm">Phone</label>
                <div class="col-sm-4">
                    <input type="tel" name="phone" class="form-control form-control-sm" value="<%= customer.phone %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="address1" class="col-sm-2 col-form-label col-form-label-sm">Primary Address</label>
                <div class="col-sm-8">
                    <input type="text" name="address1" class="form-control form-control-sm" value="<%= customer.address1 %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="address2" class="col-sm-2 col-form-label col-form-label-sm">Secondary Address</label>
                <div class="col-sm-8">
                    <input type="text" name="address2" class="form-control form-control-sm" value="<%= customer.adress2 %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="country" class="col-sm-2 col-form-label col-form-label-sm">Country</label>
                <div class="col-sm-4">
                    <input type="text" name="country" class="form-control form-control-sm" value="<%= customer.country %>">
                </div>
            </div>
            <div class="form-group row">

                <label for="state" class="col-sm-2 col-form-label col-form-label-sm">State/Region</label>
                <div class="col-sm-4">
                    <input type="text" name="state" class="form-control form-control-sm" value="<%= customer.state %>">
                </div>

                <label for="city" class="col-sm-2 col-form-label col-form-label-sm">City</label>
                <div class="col-sm-4">
                    <input type="text" name="city" class="form-control form-control-sm" value="<%= customer.city %>">
                </div>
            </div>

            <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label col-form-label-sm">Password</label>
                <div class="col-sm-6">
                    <input type="password" name="password" class="form-control form-control-sm" value="<%= customer.password %>">
                </div>
            </div>
            <input type="submit" class="btn btn-success btn-sm btn-block" value="Submit">
        </form>
    </div>
</div>