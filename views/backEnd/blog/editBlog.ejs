<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/blogs">Blogs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Blogs</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Edit Blogs</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <%- include('../../partials/errorMessage.ejs') %>
        <form action="/admin/blog/edit/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label for="pageType" class="col-sm-2 col-form-label col-form-label-sm">Blog Title</label>
                <div class="col-sm-4">
                    <input type="text" name="title" class="form-control form-control-sm" value="<%= blog.title %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="pageTitle" class="col-sm-2 col-form-label col-form-label-sm">Blog Category</label>
                <div class="col-sm-4">
                    <input type="text" name="category" class="form-control form-control-sm" value="<%= blog.category %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-2 col-form-label col-form-label-sm">Description</label>
                <div class="col-sm-10">
                <textarea name="description" class="col-sm-8 form-control form-control-sm" id="editor" rows="4"><%= blog.description %></textarea>
                </div>
            </div>         
         
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>
        </form>
    </div>
</div>
