<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/inquires">Inquires</a></li>
        <li class="breadcrumb-item active" aria-current="page">Inquiry Details</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <div class="row">
            <div class="col-md-4">
                <h4 class="my-auto">Inquiry Details</h4>
            </div>
            <div class="col-md-4 ml-auto">
                <form action="/admin/inquiry/edit/<%= inquiry._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-dark btn-sm" type="submit"><i class="fas fa-trash"></i></button>
                    <a class="btn btn-dark btn-sm" href="/admin//inquiry/edit/<%= inquiry._id %>"><i class="fas fa-edit"></i></a>
                    </form>
            </div>
        </div>
    </div>
    <div class="card-body bg-light text-dark">
        <div class="list-group">
            <div class="list-group-item list-group-item-action py-1">
                <h6>ID: <%= inquiry._id %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Name: <%= inquiry.name %></h6>
            </div>
           
            <div class="list-group-item list-group-item-action py-1">
                <h6>Email: <%= inquiry.email %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Subject: <%= inquiry.Subject %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Message: <%- inquiry.message %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Submitted Date: <%- inquiry.createdAt %></h6>
            </div>
        </div>
    </div>
</div>