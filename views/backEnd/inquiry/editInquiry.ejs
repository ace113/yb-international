<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/inquiry">Inquiry</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Inquiry</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Edit Inquiry</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <form action="/admin/inquiry/edit/<%= inquiry._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Name</label>
                <div class="col-sm-8">
                    <input type="text" name="name" id="name" class="form-control form-control-sm" value="<%= inquiry.name %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Email</label>
                <div class="col-sm-8">
                    <input type="email" name="email" id="email" class="form-control form-control-sm" value="<%= inquiry.email %>" required>                    
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Subject</label>
                <div class="col-sm-8">
                    <input type="text" name="subject" id="subject" class="form-control form-control-sm" value="<%= inquiry.subject %>">
                </div>
            </div>
          
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Message</label>
                <div class="col-sm-8">
                    <textarea name="message" id="message" class="form-control form-control-sm" rows="5"><%= inquiry.message %></textarea>
                </div>
            </div>    
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>
        </form>
    </div>
</div>