<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/pages">Pages</a></li>
        <li class="breadcrumb-item active" aria-current="page">Page Info</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <div class="row">
            <div class="col-md-4">
                <h4 class="my-auto">Page Info</h4>
            </div>
            <div class="col-md-4 ml-auto">
                <form action="/admin/page/edit/<%= Pages._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-primary btn-sm" type="submit"><i class="fas fa-trash"></i></button>
                    <a class="btn btn-primary btn-sm" href="/admin/page/edit/<%= Pages._id %>"><i
                            class="fas fa-edit"></i></a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body bg-light text-dark">
        <div class="list-group">
            <div class="list-group-item list-group-item-action py-1">
                <h6>ID: &nbsp; <%= Pages._id %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Page Type: &nbsp; <%= Pages.pageType %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Page Title: &nbsp; <%= Pages.pageTitle %></h6>
            </div>
            <div class="list-group-item list-group-item-action py-1">
                <h6>Description: </h6> <p><%= Pages.description %></p>
            </div>
        </div>
    </div>
</div>