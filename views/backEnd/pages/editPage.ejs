<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/pages">Pages</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Pages</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Edit Pages</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <%- include('../../partials/errorMessage.ejs') %>
        <form action="/admin/page/edit" method="post">
            <div class="form-group row">
                <label for="pageType" class="col-sm-2 col-form-label col-form-label-sm">Page Type</label>
                <div class="col-sm-4">
                    <input type="text" name="pageType" class="form-control form-control-sm" value="<%= page.pageType %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="pageTitle" class="col-sm-2 col-form-label col-form-label-sm">Page Title</label>
                <div class="col-sm-4">
                    <input type="text" name="pageTitle" class="form-control form-control-sm" value="<%= page.pageTitle %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-2 col-form-label col-form-label-sm">Description</label>
                <div class="col-sm-10">
                <textarea name="description" class="col-sm-8 form-control form-control-sm" id="editor" rows="4"><%= page.description %></textarea>
                </div>
            </div>         
         
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm btn-block" value="Submit">
                </div>
                <div class="col-sm-4">
                    <a href="/admin/pages" class="btn btn-danger btn-sm btn-block">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>
