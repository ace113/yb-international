<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/info">Contact Info</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Contact Info</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left;">Add Contact Info</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <%- include('../../partials/errorMessage') %>
        <form action="/admin/info/add" method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-sm">Address</label>
                <div class="col-sm-4">
                    <input type="text" name="address" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-sm">Phone</label>
                <div class="col-sm-4">
                    <input type="tel" name="phone" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-sm">Email</label>
                <div class="col-sm-4">
                    <input type="email" name="email" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" value="Submit" class="btn btn-success btn-sm btn-block">
                </div>
            </div>
        </form>
    </div>
</div>