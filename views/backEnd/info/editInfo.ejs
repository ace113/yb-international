<!-- for address -->
<script>
    $(document).ready(function () {
        //Add new element
        $('.add1').click(function () {
            //finding total no. of elements added
            var total_element = $('.element1').length;
            //last <div> with element class id
            var lastid = $('.element1:last').attr('id');
            var split_id = lastid.split('_');
            var nextindex = Number(split_id[1]) + 1;

            var max = 5;
            //check total no. elemnts
            if (total_element < max) {
                //Adding new div container after last occurance of element class
                $('.element1:last').after('<div class="element1" id="address_' + nextindex + '"></div>')
                //Adding element to <div>
                $('#address_' + nextindex).append('<input type="text" name="address" id="txt_' + nextindex + '" class="form-control form-control-sm"><button type="button" id="remove_' + nextindex + '" class="btn btn-danger btn-sm remove1"><i class="fas fa-times"></i>')
            }
        })

        //Removing element
        $('.con1').on('click', '.remove1', function () {
            var id = this.id
            console.log(id)
            var split_id = id.split('_')
            var deleteindex = split_id[1]

            //Removing <div> with id
            $('#address_' + deleteindex).remove()
        })
    })
</script>
