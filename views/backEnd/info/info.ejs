<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/info">Contact Info</a></li>
        <li class="breadcrumb-item active" aria-current="page">Contact Info</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left;">Contact Info</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <% info.forEach(info => { %>
        <div class="form-group row">
            <label class="col-sm-2">Address:</label>
            <% for(i=0; i< info.address.length; i++) { %>
            <% if(info.address[i] != null) { %>
            <%= info.address[i] %> <br>
            <% } %>
            <% } %>
        </div>
        <div class="form-group row">
            <label class="col-sm-2">Phone:</label>
            <% for(j=0; j< info.phone.length; j++) { %>
            <%= info.phone[j] %> <br>
            <% } %>
        </div>
        <div class="form-group row">
            <label class="col-sm-2">Email:</label>
            <% for(k=0; k< info.email.length; k++) { %>
            <%= info.email[k] %> <br>
            <% } %>
        </div>
        <div class="form-group mr-4" style="float: right;">
            <a href="/admin/info/edit/<%= info._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-edit"> Edit</i></a>
        </div>
<br><br>
        <% }) %>
    </div>
</div>