<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/banners">Banners</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Banners</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left;">All Banners</h4>
        <a href="/admin/banner/add" class="btn btn-sm btn-primary" style="float: right;"><i class="fas fa-plus"> Add New</i></a>
    </div>
    <div class="card-header bg-light text-dark">
        <picture class="form-group">
            <% banner.forEach(banner => { %>
            <div class="form-group m-5">
                <div class="form-group ml-3">
                    <h5>Title: &nbsp; <%= banner.title %></h5>
                    <h6>Sub-Title: &nbsp; <%= banner.subTitle %></h6>
                </div>
                <div class="form-group m-1">
                    <img src="/<%= banner.image %>" alt="" class="img-fluid img-thumbnail mx-auto" height="500px"
                        width="300px" style="margin: 5px;">
                </div>
                <div class="form-group m-1">
                    <form action="/admin/banner/edit/<%= banner._id %>?_method=DELETE" method="post">
                        <button class="btn btn-sm btn-primary ml-5"><i class="fas fa-trash"></i> Delete</button>
                        <a href="/admin/banner/edit/<%= banner._id %>" class="btn btn-sm btn-primary ml-5"><i
                                class="fas fa-edit"></i> Edit</a>
                    </form>
                </div>
            </div>
            <hr>
            <% }) %>
        </picture>
    </div>
</div>