<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Order</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h2 class="my-auto">Edit Order</h2>
    </div>

    <div class="card-body bg-light text-dark">
        <form action="/admin/order/edit/<%= order._id %>?_method=PUT" method="post">
            <div class="form-group row">
                <label for="quantity" class="col-sm-2 col-form-label col-form-label-sm">Quantity</label>
                <div class="col-sm-4">
                    <input type="text" name="quantity" class="form-control form-control-sm" value="<%= order.quantity %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="productId" class="col-sm-2 col-form-label col-form-label-sm">Product Id</label>
                <div class="col-sm-4">
                    <input type="text" name="productId" class="form-control form-control-sm" value="<%= order.productId %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="customerId" class="col-sm-2 col-form-label col-form-label-sm">Customerm Id</label>
                <div class="col-sm-4">
                    <input type="text" name="customerId" class="form-control form-control-sm" value="<%= order.customerId %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>
        </form>
    </div>
</div>