<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Orders</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left">ALL Orders</h4>
        <a href="/admin/order/add" class="btn btn-info btn-sm" style="float: right">Add New</a>
    </div>
    <div class="card-body bg-light text-dark">
        <table class="table table-sm table-hover table-bordered table-responsive-sm">
            <thead>
                <th>S. No.</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Quantity</th>
                <th width="40"> &nbsp; </th>
            </thead>
            <tbody>
                <% orders.forEach((order, sn=1 )=> { %>
                <tr>
                    <td><%= sn+1 %></td>
                    <td><%= order.customerId %></td>
                    <td><%= order.productId %></td>
                    <td><%= order.quantity %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                                data-toggle="dropdown">
                                <i class="fa fa-cog"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <form action="/admin/order/edit/<%= order._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-primary btn-sm dropdown-item" type="submit"><i
                                                class="fas fa-trash"></i> Delete</button>
                                    </form>
                                </li>
                                <li>
                                    <a class="btn btn-primary btn-sm dropdown-item"
                                        href="/admin/order/edit/<%= order._id%>"><i class="fas fa-edit"></i> Edit</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>