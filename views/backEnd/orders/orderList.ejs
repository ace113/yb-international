<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Orders</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <div class="row">
            <div class="col-md-4">
                <h4 class="my-auto">ALL Orders</h4>
            </div>
            <div class="col-md-4 ml-auto">
                <a href="/admin/order/add" class="btn btn-info">Add New</a>
            </div>
        </div>
    </div>
    <div class="card-body bg-light text-dark">
        <table class="table table-sm table-hover table-bordered table-responsive">
            <thead>
                <th>S. No.</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Quantity</th>
                <th> &nbsp; </th>
            </thead>
            <tbody>
                <% orders.forEach((order, sn=1 )=> { %>
                <tr>
                    <td><%= sn+1 %></td>
                    <td><%= order.customerId %></td>
                    <td><%= order.productId %></td>
                    <td><%= order.quantity %></td>
                    <td>
                        <form action="/admin/order/edit/<%= order._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-primary btn-sm" type="submit"><i class="fas fa-trash"></i></button>
                            <a class="btn btn-primary btn-sm" href="/admin/order/edit/<%= order._id%>"><i class="fas fa-edit"></i></a>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>