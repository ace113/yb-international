<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/quote">Quote</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Quote</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto">Add Quote</h4>
    </div>
    <div class="card-body bg-light text-dark">
        <%- include('../../partials/errorMessage.ejs') %>
        <form action="/admin/quote/edit/<%= quote._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Name</label>
                <div class="col-sm-8">
                    <input type="text" name="name" id="name" class="form-control form-control-sm"
                        value="<%= quote.name %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Email</label>
                <div class="col-sm-8">
                    <input type="email" name="email" id="email" class="form-control form-control-sm"
                        value="<%= quote.email %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Phone</label>
                <div class="col-sm-8">
                    <input type="tel" name="phone" id="phone" class="form-control form-control-sm"
                        value="<%= quote.phone %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Product</label>
                <div class="col-sm-8">
                    <input type="text" name="product" id="product" class="form-control form-control-sm"
                        value="<%= quote.product %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Product Code</label>
                <div class="col-sm-8">
                    <input type="text" name="productCode" id="code" class="form-control form-control-sm"
                        value="<%= quote.productCode %>"><small>(Optional)</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Quantity</label>
                <div class="col-sm-8">
                    <input type="text" name="quantity" id="quantity" class="form-control form-control-sm"
                        value="<%= quote.quantity %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Requirements</label>
                <div class="col-sm-8">
                    <textarea name="requirements" id="requirements"
                        class="form-control form-control-sm"><%= quote.requirements %></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label-sm">Packing Details</label>
                <div class="col-sm-8">
                    <textarea name="packingDetails" id="packingDetails"
                        class="form-control form-control-sm"><%= quote.packingDetails %></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="callMe" class="col-sm-4 col-form-label col-form-label-sm">Call me regarding this
                    quote.</label>
                <div class="col-sm-8">
                    <div class="form-check form-check-inline">
                        <input type="radio" name="callMe" class="form-check-input" value="true" checked>
                        <label class="form-check-label">Call me</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="callMe" class="form-check-input" value="false">
                        <label class="form-check-label">Email me</label>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-success btn-sm btn-block" value="Submit">
        </form>
    </div>
</div>