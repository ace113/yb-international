<div class="card">
    <div class="card-header bg-primary text-light">
        <h2>Product</h2>
    </div>

    <div class="card-body bg-light text-dark">
        <form action="" method="post" enctype="multipart/form-data" class="justify-content-md-center">
            <div class="form-group row">
                <label for="avatar" class="col-sm-2 col-form-label col-form-label-sm">Avatar</label>
                <div class="col-sm-4">
                    <input type="file" name="avatar" class="form-control-file form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="localName" class="col-sm-2 col-form-label col-form-label-sm">Local Name</label>
                <div class="col-sm-4">
                    <input type="text" name="localName" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="scientificName" class="col-sm-2 col-form-label col-form-label-sm">Scientific Name</label>
                <div class="col-sm-4">
                    <input type="text" name="scientificName" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="nepaliname" class="col-sm-2 col-form-label col-form-label-sm">Nepali Name</label>
                <div class="col-sm-4">
                    <input type="text" name="nepaliName" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="available" class="col-sm-2 col-form-label col-form-label-sm">Availability</label>
                <div class="col-sm-4">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" name="available" class="custom-control-input" value="true">
                        <label class="custom-control-label" for="customRadioInline1">True</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" name="available" class="custom-control-input" value="false">
                        <label class="custom-control-label" for="customRadioInline2">False</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="productCode" class="col-sm-2 col-form-label col-form-label-sm">Product Code</label>
                <div class="col-sm-4">
                    <input type="text" name="productCode" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="category" class="col-sm-2 col-form-label col-form-label-sm">Category</label>
                <div class="col-sm-4">
                    <select name="category" class="form-control form-control-sm">
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="button" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>

        </form>
    </div>
</div>