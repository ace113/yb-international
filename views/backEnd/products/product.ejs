<div class="card">
    <div class="card-header bg-primary text-light">
        <h2>Product</h2>
    </div>

    <div class="card-body bg-secondary text-dark">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input type="file" name="avatar">
            </div>
            <div class="form-group">
                <label for="localName">Local Name</label>
                <input type="text" name="localName">
            </div>
            <div class="form-group">
                <label for="scientificName">Scientific Name</label>
                <input type="text" name="scientificName">
            </div>
            <div class="form-group">
                <label for="nepaliname">Nepali Name</label>
                <input type="text" name="nepaliName">
            </div>
            <div class="form-group">
                <label for="available">Availability</label>
                <input type="radio" name="available" value="true">True &nbsp; <input type="radio" name="available"
                    value="false">False
            </div>
            <div class="form-group">
                <label for="productCode">Product Code</label>
                <input type="text" name="productCode">
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category">
                    <option value=""></option>
                </select>
            </div>
            <input type="button" class="btn btn-success btn-lg btn-block" value="Submit">
        </form>
    </div>
</div>