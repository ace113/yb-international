<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/product/productDetail">Product Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Product Details</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left">All Product Detail</h4>
        <a href="/admin/product/productDetail/add" class="btn btn-primary btn-sm" style="float: right"><i class="fas fa-plus"> Add New</i></a>
    </div>
</div>
<div class="card-body bg-light text-dark">
    <table class="table table-sm table-hover table-bordered table-responsive-sm">
        <thead>
            <th>S. No.</th>
            <th>Product Title</th>
            <th>Product ID</th>
            <th width="40"> &nbsp; </th>
        </thead>
        <tbody>
            <% productDetails.forEach((productDetail, sn=1 )=> { %>
            <tr>
                <td><%= sn+1 %></td>
                <td><a
                        href="/admin/product/productDetail/<%= productDetail._id %>"><%= productDetail.productTitle %></a>
                </td>
                <td><%= productDetail.product %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button"
                            data-toggle="dropdown">
                            <i class="fa fa-cog"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <form action="/admin/product/productDetail/edit/<%= productDetail._id %>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-primary btn-sm dropdown-item" type="submit"><i
                                            class="fas fa-trash"></i> Delete</button>
                                </form>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-sm dropdown-item"
                                    href="/admin/product/productDetail/edit/<%= productDetail._id %>"><i
                                        class="fas fa-edit"></i> Edit</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</div>