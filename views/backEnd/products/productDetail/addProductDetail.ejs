<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/product/productDetail">Product Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Product Detail</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h2>Add Product Detail</h2>
    </div>

    <div class="card-body bg-light text-dark">
        <form action="" method="post">
            <div class="form-group row">
                <label for="productTitle" class="col-sm-2 col-form-label col-form-label-sm">Product Title</label>
                <div class="col-sm-4">
                    <input type="text" name="productTitle" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-2 col-form-label col-form-label-sm">Description</label>
                <div class="col-sm-4">
                    <textarea name="description" class="form-control form-control-sm"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="gallery" class="col-sm-2 col-form-label col-form-label-sm">Gallery</label>
                <div class="col-sm-4">
                    <input type="file" name="gallery" class="form-control-file form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="product" class="col-sm-2 col-form-label col-form-label-sm">Product</label>
                <div class="col-sm-4">
                    <select name="product" class="form-control form-control-sm">
                        <% products.forEach(product => { %>
                        <option value="<%= product._id %>"><%= product.localName %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>
        </form>
    </div>
</div>