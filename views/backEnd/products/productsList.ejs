<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/customers">Products</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Products</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h4 class="my-auto" style="float: left">All Products</h4>
        <a href="/admin/products/add" class="btn btn-primary btn-sm" style="float: right"><i class="fas fa-plus"> Add
                New</i></a>
    </div>
    <div class="card-body bg-light text-dark">
        <table id="table" class="table table-sm table-hover table-bordered table-striped table">
            <thead>
                <th>S.No.</th>
                <th>Avatar</th>
                <th>Local Name</th>
                <th>Scientific Name</th>
                <th>Nepali Name</th>
                <th>Available</th>
                <th>Product Code</th>
                <th>Category</th>
                <th width="40"> &nbsp; </th>
            </thead>
            <tbody>
                <% products.forEach((product, sn=1 )=> { %>
                <% if(product.category != null) { %>
                <tr>
                    <td><%= sn+1 %></td>
                    <td><img src="/<%= product.avatar %>" style="width: 40px; height:40px"></td>
                    <td><a href="/admin/product/<%= product._id %>"><%= product.localName %></a></td>
                    <td><%= product.scientificName %></td>
                    <td><%= product.nepaliName %></td>
                    <td><div class="form-inline">
                        <div class="mr-4">
                            <%= product.available %>
                        </div>
                        <form action="/admin/product/editAvailable/<%= product._id %>?_method=PUT" method="POST">
                            <button class="btn btn-outline-primary btn-sm" type="submit"><i
                                    class="fas fa-eye-slash"></i></button>
                        </form>
                    </div></td>
                    <td><%= product.productCode %></td>
                    <td><%= product.category.categoryName %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                <i class="fa fa-cog"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <form action="/admin/product/edit/<%= product._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-primary btn-sm dropdown-item" type="submit"><i
                                                class="fas fa-trash"></i> Delete</button>
                                    </form>
                                </li>
                                <li>
                                    <a class="btn btn-primary btn-sm dropdown-item"
                                        href="/admin/product/edit/<%= product._id %>"><i class="fas fa-edit"></i>
                                        Edit</a>
                                </li>
                            </ul>
                    </td>
                </tr>
                <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>