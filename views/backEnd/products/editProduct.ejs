<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header bg-primary text-light">
        <h2 class="my-auto">Edit Product</h2>
    </div>

    <div class="card-body bg-light text-dark">
        <form action="/admin/product/edit/<%= product._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label for="avatar" class="col-sm-2 col-form-label col-form-label-sm">Avatar</label>
                <div class="col-sm-4">
                    <input type="file" name="avatar" class="form-control-file form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="localName" class="col-sm-2 col-form-label col-form-label-sm">Local Name</label>
                <div class="col-sm-4">
                    <input type="text" name="localName" class="form-control form-control-sm" value="<%= product.localName %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="scientificName" class="col-sm-2 col-form-label col-form-label-sm">Scientific Name</label>
                <div class="col-sm-4">
                    <input type="text" name="scientificName" class="form-control form-control-sm" value="<%= product.scientificName %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="nepaliname" class="col-sm-2 col-form-label col-form-label-sm">Nepali Name</label>
                <div class="col-sm-4">
                    <input type="text" name="nepaliName" class="form-control form-control-sm" value="<%= product.nepaliName %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="available" class="col-sm-2 col-form-label col-form-label-sm">Availability</label>
                <div class="col-sm-4">
                    <div class="form-check form-check-inline">
                        <input type="radio" name="available" class="form-check-input" value="true">
                        <label class="form-check-label">True</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="available" class="form-check-input" value="false">
                        <label class="form-check-label">False</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="productCode" class="col-sm-2 col-form-label col-form-label-sm">Product Code</label>
                <div class="col-sm-4">
                    <input type="text" name="productCode" class="form-control form-control-sm" value="<%= product.productCode %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="category" class="col-sm-2 col-form-label col-form-label-sm">Category</label>
                <div class="col-sm-4">
                    <input type="text" name="category" class="form-control form-control-sm" value="<%= product.category %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-success btn-sm  btn-block" value="Submit">
                </div>

            </div>

        </form>
    </div>
</div>